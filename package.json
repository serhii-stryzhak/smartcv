{
  "name": "smartcv",
  "version": "1.0.0",
  "description": "Minimalist resume website with Islands Architecture",
  "type": "module",
  "scripts": {
    "dev": "npm run build && concurrently -k -n css,html,js,sync \"npm run dev:css\" \"npm run dev:html\" \"npm run dev:js\" \"npm run dev:serve\"",
    "dev:css": "tailwindcss -i src/styles/main.css -o dist/styles.css --watch",
    "dev:html": "tsx watch src/build.ts",
    "dev:js": "esbuild src/client/download.ts src/client/theme.ts --bundle --outdir=dist --format=iife --watch",
    "dev:serve": "browser-sync start --server dist --files 'dist/*' --no-open --port 3000",
    "start": "npm run build && node --import tsx server/index.ts",
    "server": "node --import tsx server/index.ts",
    "build": "npm run build:css && npm run build:html && npm run build:js && npm run build:copy",
    "build:css": "tailwindcss -i src/styles/main.css -o dist/styles.css --minify",
    "build:html": "tsx src/build.ts",
    "build:js": "esbuild src/client/download.ts src/client/theme.ts --bundle --minify --outdir=dist --format=iife",
    "build:copy": "cp src/assets/* dist/",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "express": "^4.21.2",
    "lucide-react": "^0.468.0",
    "puppeteer": "^24.34.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "browser-sync": "^3.0.3",
    "concurrently": "^9.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "json-schema-to-typescript": "^15.0.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  }
}
